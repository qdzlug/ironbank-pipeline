{
	"$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://repo1.dsop.io/ironbank-tools/ironbank-pipeline/schema/ironbank.schema.json",
    "title": "IronBank",
    "description": "Metadata surrounding an Iron Bank Container",
    "type": "object",
    "properties": {
        "apiVersion": {
            "description": "Version of Iron Bank metadata file",
            "type": "string"
        },
        "name": {
            "$comment": "Should this be path?",
            "description": "Name of the Iron Bank container",
            "type": "string"
        },
        "tags": {
            "description": "",
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "args": {
            "$comment": "Do we want more args than this?",
            "description": "",
            "type": "object",
            "properties": {
                "BASE_IMAGE_NAME": {
                    "type": "string"
                },
                "BASE_IMAGE_TAG": {
                    "type": "string"
                }
            },
            "required": [ "BASE_IMAGE_NAME", "BASE_IMAGE_TAG" ]
        },
        "labels": {
            "description": "",
            "type": "string"
        },
        "resources": {
            "description": "",
            "type": "string"
        },
        "maintainers": {
            "description": "Maintainers for this specific container",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "username": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "cht_member": {
                        "type": "boolean"
                    }
                },
                "required": [ "name", "username", "email" ]
            },
            "minItems": 1,
            "uniqueItems": true
        }
    },
    "required": [ "apiVersion", "name", "tags", "args", "labels", "resources", "maintainers" ]
}
