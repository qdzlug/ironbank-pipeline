{
	"$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://repo1.dsop.io/ironbank-tools/ironbank-pipeline/schema/ironbank.schema.json",
    "title": "IronBank",
    "description": "Metadata surrounding an Iron Bank Container",
    "type": "object",
    "properties": {
        "apiVersion": {
            "description": "Version of Iron Bank metadata file",
            "type": "string"
        },
        "name": {
            "$comment": "TODO: Should this be path?",
            "description": "Name of the Iron Bank container",
            "type": "string"
        },
        "tags": {
            "description": "Tags to tag an image with when pushed to registry1",
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "args": {
            "$comment": "TODO: Do we want more args than this?",
            "description": "Arguments passed to image build",
            "type": "object",
            "properties": {
                "BASE_IMAGE_NAME": {
                    "type": "string"
                },
                "BASE_IMAGE_TAG": {
                    "type": "string"
                }
            },
            "required": [
                "BASE_IMAGE_NAME",
                "BASE_IMAGE_TAG"
            ]
        },
        "labels": {
            "description": "Labels added to Iron Bank containers",
            "type": "object",
            "properties": {
                "org.opencontainers.image.title": {
                    "type": "string"
                },
                "org.opencontainers.image.description": {
                    "type": "string"
                },
                "org.opencontainers.image.licenses": {
                    "type": "string"
                },
                "org.opencontainers.image.url": {
                    "$comment": "TODO: regex url",
                    "type": "string"
                },
                "org.opencontainers.image.vendor": {
                    "type": "string"
                },
                "org.opencontainers.image.version": {
                    "type": "string"
                },
                "io.dsop.ironbank.image.keywords": {
                    "$comment": "TODO: lock this down to specific keywords",
                    "type": "string"
                },
                "io.dsop.ironbank.image.type": {
                    "$comment": "TODO: lock this down to specific keywords",
                    "type": "string"
                },
                "io.dsop.ironbank.product.name": {
                    "type": "string"
                },
                "maintainer": {
                    "type": "string"
                }
            },
            "required": [
                "org.opencontainers.image.title",
                "org.opencontainers.image.description",
                "org.opencontainers.image.licenses",
                "org.opencontainers.image.url",
                "org.opencontainers.image.vendor",
                "org.opencontainers.image.version",
                "io.dsop.ironbank.image.keywords",
                "io.dsop.ironbank.image.type",
                "io.dsop.ironbank.product.name",
                "maintainer"
            ]
        },
        "resources": {
            "description": "",
            "type": "string"
        },
        "maintainers": {
            "description": "Maintainers for this specific container",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "username": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "cht_member": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "name",
                    "username",
                    "email"
                ]
            },
            "minItems": 1,
            "uniqueItems": true
        }
    },
    "required": [
        "apiVersion",
        "name",
        "tags",
        "args",
        "labels",
        "resources",
        "maintainers"
    ]
}
