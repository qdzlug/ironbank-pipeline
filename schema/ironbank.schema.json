{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://repo1.dsop.io/ironbank-tools/ironbank-pipeline/schema/ironbank.schema.json",
    "title": "IronBank",
    "description": "Metadata surrounding an Iron Bank Container",
    "type": "object",
    "$comment": "TODO: Figure out if there is a blacklist",
    "properties": {
        "apiVersion": {
            "description": "Version of Iron Bank metadata file",
            "type": "string"
        },
        "name": {
            "$comment": "TODO: Should this be path?",
            "description": "Name of the Iron Bank container",
            "type": "string"
        },
        "tags": {
            "description": "Tags to tag an image with when pushed to registry1",
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "args": {
            "$comment": "TODO: Do we want more args than this?",
            "description": "Arguments passed to image build",
            "type": "object",
            "properties": {
                "BASE_IMAGE_NAME": {
                    "$comment": "TODO: Handle empty strings in pipeline code for special cases [ubi/scratch]",
                    "type": "string"
                },
                "BASE_IMAGE_TAG": {
                    "$comment": "TODO: Handle empty strings in pipeline code for special cases [ubi/scratch]",
                    "type": "string"
                }
            },
            "required": [
                "BASE_IMAGE_NAME",
                "BASE_IMAGE_TAG"
            ]
        },
        "labels": {
            "description": "Labels added to Iron Bank containers",
            "type": "object",
            "properties": {
                "org.opencontainers.image.title": {
                    "type": "string"
                },
                "org.opencontainers.image.description": {
                    "type": "string"
                },
                "org.opencontainers.image.licenses": {
                    "$comment": "Made temporarily optional",
                    "$comment": "See https://spdx.org/licenses/",
                    "type": "string"
                },
                "org.opencontainers.image.url": {
                    "type": "string",
                    "format": "uri"
                },
                "org.opencontainers.image.vendor": {
                    "type": "string"
                },
                "org.opencontainers.image.version": {
                    "type": "string"
                },
                "io.dsop.ironbank.image.keywords": {
                    "$comment": "Made temporarily optional",
                    "$comment": "TODO: Make a decision on whether to lock this down to specific keywords [use an enum]",
                    "type": "string"
                },
                "io.dsop.ironbank.image.type": {
                    "$comment": "Made temporarily optional",
                    "$comment": "TODO: lock this down to specific keywords",
                    "type": "string"
                },
                "io.dsop.ironbank.product.name": {
                    "$comment": "Made temporarily optional",
                    "type": "string"
                },
                "maintainer": {
                    "type": "string"
                }
            },
            "required": [
                "org.opencontainers.image.title",
                "org.opencontainers.image.description",
                "org.opencontainers.image.url",
                "org.opencontainers.image.vendor",
                "org.opencontainers.image.version",
                "maintainer"
            ]
        },
        "resources": {
            "$comment": "Is this strictly required?",
            "description": "Resources to download before building the image",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "url": {
                        "type": "string"
                    },
                    "tag": {
                        "$comment": "Used for docker resources",
                        "type": "string"
                    },
                    "validation": {
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "string"
                            },
                            "value": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "type",
                            "value"
                        ]
                    },
                    "auth": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "region": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "id",
                            "region"
                        ]
                    }
                },
                "required": [
                    "url"
                ]
            },
            "uniqueItems": true
        },
        "maintainers": {
            "description": "Maintainers for this specific container",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "username": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "cht_member": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "name",
                    "username",
                    "email"
                ]
            },
            "minItems": 1,
            "uniqueItems": true
        }
    },
    "required": [
        "apiVersion",
        "name",
        "tags",
        "args",
        "labels",
        "maintainers"
    ]
}
